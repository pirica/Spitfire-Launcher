{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Spitfire Launcher",
  "version": "1.7.0",
  "identifier": "com.spitfire-launcher.app",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Spitfire Launcher",
        "width": 1280,
        "height": 720,
        "fullscreen": false,
        "decorations": false,
        "center": true
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' asset:",
        "connect-src": "ipc: http://ipc.localhost http://tauri.localhost https://*.epicgames.com wss://xmpp-service-prod.ol.epicgames.com https://api.rookie-spitfire.xyz https://api.github.com/repos/bur4ky/spitfire-launcher/releases/latest",
        "img-src": "'self' asset: http://asset.localhost https://*.epicgames.com https://fortnite-api.com https://cdn.fortnite-api.com https://media.fortniteapi.io blob: data:",
        "style-src": "'self' 'unsafe-inline'",
        "frame-src": "'self' https://www.youtube-nocookie.com"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/legendary"
    ]
  }
}
